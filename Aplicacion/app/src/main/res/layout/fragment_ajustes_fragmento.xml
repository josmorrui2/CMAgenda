<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragAjus"
    tools:context=".AjustesFragmento">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/cambiarDatos"
        android:layout_width="251dp"
        android:layout_height="53dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="27dp"
        android:layout_marginLeft="27dp"
        android:layout_marginEnd="27dp"
        android:layout_marginRight="27dp"
        android:fontFamily="@font/bad_script"
        android:gravity="center"
        android:shadowColor="#67787E"
        android:shadowDx="4"
        android:shadowDy="4"
        android:shadowRadius="4"
        android:text="Editar Perfil"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        android:textColor="#FAF4F4"
        android:textSize="36sp"
        android:textStyle="bold"
        tools:text="Editar Perfil" />

    <TextView
        android:id="@+id/textnombre"
        android:layout_width="111dp"
        android:layout_height="56dp"
        android:layout_below="@id/cambiarDatos"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="243dp"
        android:layout_marginRight="243dp"
        android:autofillHints="Nombre"
        android:background="#8FD8EBF4"
        android:ems="10"
        android:fontFamily="sans-serif-condensed-medium"
        android:gravity="center"
        android:hint="@string/nombre"
        android:inputType="textPersonName"
        android:text="Nombre"
        android:textColor="#67787E"
        android:textColorHighlight="#8FD8EBF4"
        android:textSize="14sp"
        tools:ignore="LabelFor" />

    <EditText
        android:id="@+id/nombre"
        android:layout_width="111dp"
        android:layout_height="56dp"
        android:layout_below="@id/cambiarDatos"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="114dp"
        android:layout_marginRight="114dp"
        android:autofillHints="Nombre"
        android:background="#8FD8EBF4"
        android:ems="10"
        android:fontFamily="sans-serif-condensed-medium"
        android:gravity="center"
        android:hint="@string/nombre"
        android:inputType="textPersonName"
        android:textColor="#67787E"
        android:textColorHighlight="#8FD8EBF4"
        android:textSize="24sp"
        tools:ignore="LabelFor" />

    <ImageButton
        android:id="@+id/botonEditarNombre"
        android:layout_width="80dp"
        android:layout_height="56dp"
        android:layout_below="@id/cambiarDatos"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="22dp"
        android:layout_marginRight="22dp"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:text="@string/editar">

    </ImageButton>

    <TextView
        android:id="@+id/textApellidos"
        android:layout_width="111dp"
        android:layout_height="56dp"
        android:layout_below="@id/textnombre"
        android:layout_alignStart="@+id/textnombre"
        android:layout_alignLeft="@+id/textnombre"
        android:layout_alignEnd="@+id/textnombre"
        android:layout_alignRight="@+id/textnombre"
        android:layout_marginTop="15dp"
        android:autofillHints="Nombre"
        android:background="#8FD8EBF4"
        android:ems="10"
        android:fontFamily="sans-serif-condensed-medium"
        android:gravity="center"
        android:hint="@string/nombre"
        android:inputType="textPersonName"
        android:text="Apellidos"
        android:textColor="#67787E"
        android:textColorHighlight="#8FD8EBF4"
        android:textSize="14sp"
        tools:ignore="LabelFor"  />

    <EditText
        android:id="@+id/apellidos"
        android:layout_width="111dp"
        android:layout_height="56dp"
        android:layout_below="@id/nombre"
        android:layout_alignStart="@+id/nombre"
        android:layout_alignLeft="@+id/nombre"
        android:layout_alignEnd="@+id/nombre"
        android:layout_alignRight="@+id/nombre"
        android:layout_marginTop="15dp"
        android:autofillHints="apellidos"
        android:background="#8FD8EBF4"
        android:ems="10"
        android:fontFamily="sans-serif-condensed-medium"
        android:gravity="center"
        android:hint="@string/apellidos"
        android:inputType="text"
        android:textColor="#67787E"
        android:textColorHighlight="#DAC4C4"
        android:textSize="24sp"
        tools:ignore="LabelFor" />

    <TextView
        android:id="@+id/textEmail"
        android:layout_width="111dp"
        android:layout_height="56dp"
        android:layout_below="@id/textApellidos"
        android:layout_alignStart="@+id/textApellidos"
        android:layout_alignLeft="@+id/textApellidos"
        android:layout_alignEnd="@+id/textApellidos"
        android:layout_alignRight="@+id/textApellidos"
        android:layout_marginTop="15dp"
        android:autofillHints="Nombre"
        android:background="#8FD8EBF4"
        android:ems="10"
        android:fontFamily="sans-serif-condensed-medium"
        android:gravity="center"
        android:hint="@string/nombre"
        android:inputType="textPersonName"
        android:text="Email"
        android:textColor="#67787E"
        android:textColorHighlight="#8FD8EBF4"
        android:textSize="14sp"
        tools:ignore="LabelFor"  />

    <EditText
        android:id="@+id/email"
        android:layout_width="111dp"
        android:layout_height="56dp"
        android:layout_below="@id/apellidos"
        android:layout_alignStart="@+id/apellidos"
        android:layout_alignLeft="@+id/apellidos"
        android:layout_alignEnd="@+id/apellidos"
        android:layout_alignRight="@+id/apellidos"
        android:layout_marginTop="15dp"
        android:autofillHints="email"
        android:background="#8FD8EBF4"
        android:ems="10"
        android:fontFamily="sans-serif-condensed-medium"
        android:gravity="center"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:labelFor="@id/email"
        android:textColor="#67787E"
        android:textColorHighlight="#DAC4C4"
        android:textSize="24sp"
        tools:ignore="LabelFor" />

    <TextView
        android:id="@+id/textFecha"
        android:layout_width="111dp"
        android:layout_height="56dp"
        android:layout_below="@id/textEmail"
        android:layout_alignStart="@+id/textEmail"
        android:layout_alignLeft="@+id/textEmail"
        android:layout_alignEnd="@+id/textEmail"
        android:layout_alignRight="@+id/textEmail"
        android:layout_marginTop="15dp"
        android:autofillHints="Nombre"
        android:background="#8FD8EBF4"
        android:ems="10"
        android:fontFamily="sans-serif-condensed-medium"
        android:gravity="center"
        android:hint="@string/nombre"
        android:inputType="textPersonName"
        android:text="Fecha de Nacimiento"
        android:textColor="#67787E"
        android:textColorHighlight="#8FD8EBF4"
        android:textSize="14sp"
        tools:ignore="LabelFor" />

    <EditText
        android:id="@+id/fechaNacimiento"
        android:layout_width="111dp"
        android:layout_height="56dp"
        android:layout_below="@id/email"
        android:layout_alignStart="@+id/email"
        android:layout_alignLeft="@+id/email"
        android:layout_alignEnd="@+id/email"
        android:layout_alignRight="@+id/email"
        android:layout_marginTop="15dp"
        android:autofillHints="fechaNacimiento"
        android:background="#8FD8EBF4"
        android:clickable="true"
        android:ems="10"
        android:focusable="true"
        android:fontFamily="sans-serif-condensed-medium"
        android:gravity="center"
        android:hint="@string/FechaNacimiento"
        android:inputType="date"
        android:textColor="#67787E"
        android:textColorHighlight="#DAC4C4"
        android:textSize="24sp"
        tools:ignore="LabelFor" />

</RelativeLayout>