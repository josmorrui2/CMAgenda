<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/fragPerExam"
    android:background="@drawable/fondo"
    tools:context=".ExamenesFragmento">

    <TextView
        android:id="@+id/proximosExamenes"

        android:layout_width="362dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bad_script"
        android:gravity="center"
        android:shadowColor="#67787E"
        android:shadowDx="4"
        android:shadowDy="4"
        android:shadowRadius="4"
        android:text="Pr칩ximos ex치menes"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        android:textColor="#FAF4F4"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:text="Pr칩ximos ex치menes" />

    <ListView
        android:id="@+id/lista"
        android:layout_width="362dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="#8FD8EBF4"
        android:headerDividersEnabled="true" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnAnadirExamen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_below="@id/lista"
        android:layout_alignStart="@+id/lista"
        android:layout_alignLeft="@+id/lista"
        android:layout_alignEnd="@+id/lista"
        android:layout_alignRight="@+id/lista"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@android:drawable/ic_input_add" />


</LinearLayout>