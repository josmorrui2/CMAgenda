    <LinearLayout
        android:id="@+id/control1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/bad_script"
            android:gravity="center"
            android:shadowColor="#67787E"
            android:shadowDx="4"
            android:shadowDy="4"
            android:shadowRadius="4"
            android:text="NOMBRE : "
            android:textAppearance="@style/TextAppearance.AppCompat.Display3"
            android:textColor="#FAF4F4"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/nombrePerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:shadowColor="#67787E"
            android:text="nombre"
            android:textColor="@color/colorPrimaryText"
            android:textSize="14sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/control2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_below="@id/control1"
        android:layout_alignStart="@+id/control1"
        android:layout_alignLeft="@+id/control1"
        android:layout_alignEnd="@+id/control1"
        android:layout_alignRight="@+id/control1">

        <TextView
            android:layout_width="61dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:fontFamily="@font/bad_script"
            android:gravity="center"
            android:shadowColor="#67787E"
            android:shadowDx="4"
            android:shadowDy="4"
            android:shadowRadius="4"
            android:text="APELLIDOS : "
            android:textAppearance="@style/TextAppearance.AppCompat.Display3"
            android:textColor="#FAF4F4"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/apellidosPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:gravity="center"
            android:shadowColor="#67787E"
            android:text="apellidos"
            android:textColor="@color/colorPrimaryText"
            android:textSize="14sp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/control3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
