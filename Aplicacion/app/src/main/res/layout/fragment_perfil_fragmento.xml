        android:layout_below="@id/control2"
        android:layout_alignStart="@+id/control2"
        android:layout_alignLeft="@+id/control2"
        android:layout_alignEnd="@+id/control2"
        android:layout_alignRight="@+id/control2">
        >

        <TextView
            android:layout_width="38dp"
            android:layout_height="40dp"

            android:layout_weight="1"
            android:fontFamily="@font/bad_script"
            android:gravity="center"
            android:shadowColor="#67787E"
            android:shadowDx="4"
            android:shadowDy="4"
            android:shadowRadius="4"
            android:text="EMAIL : "
            android:textAppearance="@style/TextAppearance.AppCompat.Display3"
            android:textColor="#FAF4F4"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/emailPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:gravity="center"
            android:shadowColor="#67787E"
            android:text="email"
            android:textColor="@color/colorPrimaryText"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/control4"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_below="@id/control3"
        android:layout_alignStart="@+id/control3"
        android:layout_alignLeft="@+id/control3"
        android:layout_alignEnd="@+id/control3"
        android:layout_alignRight="@+id/control3">


        <TextView
            android:layout_width="139dp"
            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:fontFamily="@font/bad_script"
            android:gravity="center"
            android:shadowColor="#67787E"
            android:shadowDx="4"
            android:shadowDy="4"
            android:shadowRadius="4"
            android:text="FECHA DE NACIMIENTO : "
            android:textAppearance="@style/TextAppearance.AppCompat.Display3"
            android:textColor="#FAF4F4"
            android:textSize="14sp"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/fechaNacimientoPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:gravity="center"
            android:shadowColor="#67787E"
            android:text="Fecha de Nacimiento"
            android:textColor="@color/colorPrimaryText"
            android:textSize="14sp"
            android:textStyle="bold"
         />

    </LinearLayout>

    <TextView
        android:id="@+id/cambiarDatos"
        android:layout_width="183dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/signUpButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="51dp"
        android:layout_below="@id/control4"
        android:layout_alignStart="@+id/control4"
        android:layout_alignLeft="@+id/control4"
        android:layout_alignEnd="@+id/control4"
        android:layout_alignRight="@+id/control4"
        android:gravity="center_horizontal"
        android:text="¿Quieres cambiar algún dato?"
        android:textColor="@color/colorAccent"
        android:textStyle="bold" />
